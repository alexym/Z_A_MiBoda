<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="date">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/day_size_font</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dots" parent="date">
        <item name="android:textSize">@dimen/dots_size_font</item>
        <item name="android:paddingStart">@dimen/ex_large_margin</item>
        <item name="android:paddingEnd">@dimen/ex_large_margin</item>
    </style>

    <style name="date_title">
        <item name="android:fontFamily">@font/good_vibrations</item>
<!--        <item name="android:textColor">@android:color/black</item>-->
        <item name="android:textSize">@dimen/day_size_title_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>